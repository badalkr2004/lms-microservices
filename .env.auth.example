# Service Authentication Configuration
# Copy this to your .env file and update the values

# Service API Keys for inter-service communication
COURSE_SERVICE_API_KEY=course_service_secret_key_here
PAYMENT_SERVICE_API_KEY=payment_service_secret_key_here
ASSESSMENT_SERVICE_API_KEY=assessment_service_secret_key_here
ANALYTICS_SERVICE_API_KEY=analytics_service_secret_key_here
NOTIFICATION_SERVICE_API_KEY=notification_service_secret_key_here
LIVE_SESSION_SERVICE_API_KEY=live_session_service_secret_key_here
FILE_SERVICE_API_KEY=file_service_secret_key_here
API_GATEWAY_SERVICE_KEY=api_gateway_secret_key_here

# Shared secret for HMAC signatures
SERVICE_SECRET_KEY=your_super_secure_service_secret_key_here

# User Service URL for other services
